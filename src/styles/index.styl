a:not(.btn):not(.card):not(.img)
  position relative
  display inline-block
  outline none
  color #404d5b
  vertical-align bottom
  text-decoration none
  white-space nowrap
  overflow hidden
  font-weight 400

  &:before, &:after
    pointer-events none
    -webkit-backface-visibility hidden
    backface-visibility hidden
    -webkit-font-smoothing antialiased
    font-smoothing antialiased

  &:before
    position absolute
    top 0
    left 0
    z-index -1
    width 100%
    height 100%
    background-color rgba(52,73,94,0.2)
    content ''
    transition transform 0.2s
    transform translateY(95%)

  &:hover:before, &:focus:before
    transform translateY(0)

section
  width 85%
  max-width 800px
  margin auto
  animation appear .3s
  padding-bottom 40px

#close
  position absolute
  top 40px
  right 40px
  animation close-appear 1s

.btn
  color #444
  text-decoration none
  font-size 3em
  transform scale(0.8)
  transition .2s
  &:hover
    color #222
    transform scale(1.0)

.card
  margin auto
  text-align center
  text-decoration none
  font-size 5em
  color #444
  display inline-block
  width 33.3%
  padding-left 5px
  padding-bottom 5px
  &:first-child
    padding-left 0
  div
    transition .3s
    .fa
      transition transform .3s
      transform scale(0.75)
    &:hover
      .fa
        transform scale(1.0)
    width 100%
    height 100%
    padding 40px 0px
    display inline-block
    &:hover
      background #444
      color #eee

@media screen and (max-width: 600px)
  #close
    top 20px
    right 20px
  .btn
    font-size 2em
  .card
    width 100%
    font-size 3em
  h1
    font-size 2.5em
