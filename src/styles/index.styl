
@import url("http://fonts.googleapis.com/css?family=Varela+Round")
@import url("http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,300italic,400italic")

@keyframes appear
  from
    opacity 0
    transform scale(0.9)
  to
    opacity 1
    transform scale(1)

@keyframes close-appear
  from
    transform scale(0)
  50%
    transform scale(0)
  to
    transform scale(0.8)

body
  font-family "Source Sans Pro" sans-serif
  font-size 1.2em
  font-weight 300
  color #666
  margin 0

*
  box-sizing border-box

h1, h2, h3, h4
  color #222
  font-family "Varela Round" sans-serif

h1
  font-size 3em
  font-weight normal
  text-align center
  margin 0

header
  padding 80px 0 20px 0
  .quote
    margin-top 20px

.quote
  font-family "Source Sans Pro" sans-serif
  font-style italic
  text-align center
  color #888
  margin 0
  font-size 1.2em

.ace_editor
  height 200px

